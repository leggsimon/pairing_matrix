<div class="container">
  <div class="row center-block">

  <h2>Cohort List</h2>
    <% if @students.any? %>
      <% @students.each do |student| %>
      <ul>
        <%=link_to student.first_name, student_path(student)%>
      </ul>
      <%end%>
    <% else %>
       no students
    <% end %>

    <%= form_tag('/pairings') do %>
    <%= select_tag(:pairing_session, options_for_select(@pairs_length.sort)) %>
    <%= submit_tag 'Generate pairs' %>
    <%end%>

    Pairs
    <% if @students.any? %>
    <%@students.each do |student| %>
    <ul>
      <%="#{student.first_name} is paired with #{(Student.find(student.current_pair)).first_name}"%>
    </ul>
    <%end%>
    <%end%>
  </div>
</div>
